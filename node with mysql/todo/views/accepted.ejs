<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Accepted Tasks</title>
</head>
<body>
    <h1>Accepted Tasks</h1>
    <table border="1">
        <thead>
            <tr>
                <th>Task Name</th>
                <th>Start Date</th>
                <th>End Date</th>
                <!-- Add more columns if needed -->
            </tr>
        </thead>
        <tbody>
            <% tasks.forEach(function(task) { %>
                <tr>
                    <td><%= task.taskname %></td>
                    <td><%= task.startdate %></td>
                    <td><%= task.enddate %></td>
                    <!-- Render additional task details here -->
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
